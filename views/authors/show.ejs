<h2 class="page-header"><%= author.name %></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', {url: `${author.id}`}) %>
</div>
<% if(booksByAuthor.length > 0) { %>
        <h2 class="page-header">Books by Author</h2>
        <%- include('../partials/bookGrid',{ 
            books: booksByAuthor
        }) %>
<% } else { %>
    <p>There are no books by <%= author.name %>. Click <a class="btn-in-text" href = "/books/new">here</a> to add a new book.</p>
<% } %>